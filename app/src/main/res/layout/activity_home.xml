<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1DADA"
    tools:context=".home.HomeActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="325dp"
        android:layout_height="316dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.038"
        app:srcCompat="@drawable/logo" />

    <!-- Buttons -->
    <ImageButton
        android:id="@+id/imageSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.608"
        app:srcCompat="@drawable/bigbutton"
        android:background="@android:color/transparent"
        android:contentDescription="사진검색" />

    <ImageButton
        android:id="@+id/voiceSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.928"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.608"
        app:srcCompat="@drawable/bigbutton"
        android:background="@android:color/transparent"
        android:contentDescription="음성검색" />

    <ImageButton
        android:id="@+id/textSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.106"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.969"
        app:srcCompat="@drawable/bigbutton"
        android:background="@android:color/transparent"
        android:contentDescription="글자검색" />

    <ImageButton
        android:id="@+id/MyPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.933"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.969"
        app:srcCompat="@drawable/bigbutton"
        android:background="@android:color/transparent"
        android:contentDescription="마이페이지" />

    <!-- Centered TextViews for Buttons -->
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사진\n검색"
        android:textColor="@color/white"
        android:textSize="60sp"
        android:textStyle="bold"
        android:layout_marginBottom="10sp"
        app:layout_constraintBottom_toBottomOf="@id/imageSearch"
        app:layout_constraintEnd_toEndOf="@id/imageSearch"
        app:layout_constraintStart_toStartOf="@id/imageSearch"
        app:layout_constraintTop_toTopOf="@+id/imageSearch" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="음성\n검색"
        android:textColor="@color/white"
        android:textSize="60sp"
        android:textStyle="bold"
        android:layout_marginBottom="10sp"
        app:layout_constraintBottom_toBottomOf="@id/voiceSearch"
        app:layout_constraintEnd_toEndOf="@id/voiceSearch"
        app:layout_constraintStart_toStartOf="@id/voiceSearch"
        app:layout_constraintTop_toTopOf="@id/voiceSearch" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="글자\n검색"
        android:textColor="@color/white"
        android:textSize="60sp"
        android:textStyle="bold"
        android:layout_marginBottom="10sp"
        app:layout_constraintBottom_toBottomOf="@id/textSearch"
        app:layout_constraintEnd_toEndOf="@id/textSearch"
        app:layout_constraintStart_toStartOf="@id/textSearch"
        app:layout_constraintTop_toTopOf="@id/textSearch" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="마이\n페이지"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="53sp"
        android:textStyle="bold"
        android:layout_marginBottom="10sp"
        app:layout_constraintBottom_toBottomOf="@id/MyPage"
        app:layout_constraintEnd_toEndOf="@id/MyPage"
        app:layout_constraintStart_toStartOf="@id/MyPage"
        app:layout_constraintTop_toTopOf="@id/MyPage" />
</androidx.constraintlayout.widget.ConstraintLayout>
